<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guanghuili.checkesandchess">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Checkers.CheckerRoomActivity" />
        <activity android:name=".Checkers.BlackCheckerActivity" />
        <activity android:name=".Checkers.RedCheckerActivity" />
        <activity android:name=".CreditActivity" />
        <activity android:name=".Chess.Chess" />
        <activity android:name=".Chess.ChessRoomActivity" />
        <activity android:name=".Chess.BlackChessActivity" />
        <activity android:name=".Chess.RedChessActivity"></activity>
    </application>

</manifest>